<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">











        <TextView

            android:id="@+id/textView"
            android:layout_marginTop="20dp"

            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="מחשבון"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="34sp" />


    <TextView
        android:id="@+id/show"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"

        android:textAlignment="center"
        android:textSize="30sp"
        />
<TableRow>

    <Button
        android:id="@+id/del"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="C"
        android:textSize="28sp"
        android:textColor="@color/white"

        app:backgroundTint="#2E2D2D" />
    <Button
        android:id="@+id/open"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:backgroundTint="#2E2D2D"
        android:textSize="28sp"
        android:textColor="@color/white"

        android:text="(" />
    <Button
        android:id="@+id/close"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:backgroundTint="#2E2D2D"
        android:textSize="28sp"
        android:textColor="@color/white"

        android:text=")" />

    <Button
        android:id="@+id/delete2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:backgroundTint="#2E2D2D"
        android:textSize="28sp"
        android:textColor="@color/white"

        android:text="⌦" />
</TableRow>
    <TableRow>


        <Button
            android:id="@+id/num7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="7" />

        <Button
            android:id="@+id/num8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="8" />
        <Button
            android:id="@+id/num9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="9"/>
        <Button
            android:id="@+id/div"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#2E2D2D"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="/" />




    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/num4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="4"
            />

        <Button
            android:id="@+id/num5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="5"
            />

        <Button
            android:id="@+id/num6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="6" />
        <Button
            android:id="@+id/kafol"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#2E2D2D"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="x" />

    </TableRow>

    <TableRow>


        <Button
            android:id="@+id/num1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="1" />
        <Button
            android:id="@+id/num2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="2" />



        <Button
            android:id="@+id/num3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="3"
            app:backgroundTint="#595656" />
        <Button
            android:id="@+id/minos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#2E2D2D"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="-"
            />

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/point"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="." />

        <Button
            android:id="@+id/num0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#595656"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="0" />

        <Button

            android:id="@+id/shave"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="="
            app:backgroundTint="#FF9232" />
        <Button
            android:id="@+id/plos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:backgroundTint="#2E2D2D"
            android:textSize="28sp"
            android:textColor="@color/white"

            android:text="+" />




    </TableRow>




















</TableLayout>